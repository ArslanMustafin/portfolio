---
import "@fontsource-variable/sora";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Frontend developer with expertise in React.js, JavaScript, and UI/UX design. Skilled in creating responsive, dynamic websites and applications."
    />
    <meta
      name="keywords"
      content="Frontend developer, React.js, JavaScript, UI/UX design, web development, portfolio, responsive design, HTML, CSS, JavaScript projects, frontend portfolio"
    />
    <meta name="author" content="Arslan Mustafin" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @import "../styles/utils/mixins/media-query.css";
  @import "../styles/utils/variables/index.css";

  @import "../styles/global.css";
</style>
