---
export interface Props {
  // Ограничение типов тега
  tag: "h1" | "h2" | "h3" | "h4" | "h5" | "h6" | "p" | "span";
  // Предопределенные стили текста
  variant:
    | "display-text"
    | "outlined-l"
    | "outlined-m"
    | "sub-heading"
    | "heading-h1"
    | "heading-h2"
    | "heading-h3"
    | "heading-h4"
    | "heading-h5"
    | "heading-h6"
    | "paragraph-p1"
    | "paragraph-p2"
    | "paragraph-p3"
    | "button-text"
    | "button-text-2"
    | "underlined-text";
  // Варианты толщины текста
  weight?: "regular" | "semi-bold" | "bold" | "extra-bold";
  // дополнительный класс
  class?: string;
}

const {
  tag = "p",
  variant,
  weight = "regular",
  class: className,
} = Astro.props as Props;
const Tag = tag as keyof HTMLElementTagNameMap;
const style = `${variant}-${weight}`;
---

<Tag class:list={[style, className]}>
  <slot />
</Tag>

